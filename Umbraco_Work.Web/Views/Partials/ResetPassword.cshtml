@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco_Work.Core.ViewModel.ResetPasswordViewModel>

@{ 
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

@if (TempData["status"] != null && (string)TempData["status"] == "OK")
{
    <h3>Password changed</h3>
    <p>Your password has changed, plase login now with yoru new  credentials</p>
    <a href="/login">Go to login</a>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                @using (Html.BeginUmbracoForm<Umbraco_Work.Core.Controllers.AuthController>("HandleResetPassword"))
                {
                    <div class="form-group">
                        <div class="editor-label">
                            @Html.LabelFor(x => x.Password)
                        </div>
                        <div class="editor-label">
                            @Html.EditorFor(x => x.Password, new { placeholder = "Password", type = "password" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="editor-label">
                            @Html.LabelFor(x => x.ConfirmPassword)
                        </div>
                        <div class="editor-label">
                            @Html.EditorFor(x => x.ConfirmPassword, new { placeholder = "Password", type = "password" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="submit">Reset password</button>
                    </div>
                }

            </div>
        </div>
    </div>
}